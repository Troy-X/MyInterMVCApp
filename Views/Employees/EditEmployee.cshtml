@model EmployeeViewModel

<form method="post" asp-action="EditEmployee">
    <input type="hidden" name="Id" class="form-control" value="@Model.Id" />

    <label>Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label>Position</label>
    <input type="text" name="Position" class="form-control" value="@Model.Position" />

    <label>Salary</label>
    <input type="number" name="Salary" class="form-control" value="@Model.Salary" />

    <br />
    <button class="btn btn-secondary btn-sm me-2" type="submit">Edit</button>

    <a asp-controller="Employees" asp-action="Index" class="btn btn-primary btn-sm">Cancel</a>
</form>
